<%- include('../partials/header', { pageTitle: 'Manage Events' }) %>

<h2>Manage Events</h2>
<p><a href="/admin/events/new" class="btn">Create New Event</a></p>

<% if (events.length > 0) { %>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Event Date</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach(event => { %>
                <tr>
                    <td><%= event.name %></td>
                    <td><%= event.eventDate ? new Date(event.eventDate).toLocaleString() : 'N/A' %></td>
                    <td><%= event.locationName || 'N/A' %></td>
                    <td>
                        <a href="/admin/events/edit/<%= event.id %>" class="btn btn-sm">Edit</a>
                        <a href="/events/<%= event.slug %>" target="_blank" class="btn btn-sm btn-secondary">View</a>
                        <a href="/admin/events/<%= event.id %>/registrations" class="btn btn-sm btn-info">Registered Users</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No events found. <a href="/admin/events/new">Create one now!</a></p>
<% } %>

<%- include('../partials/footer') %>
