<%- include('../partials/header', { pageTitle: 'Admin Login' }) %>

<div class="admin-form">
    <h2>Admin Login</h2>

    <%# Display Passport's 'error' flash message %>
    <% if (error && error.length > 0) { %> <%# This now checks res.locals.error %>
        <div class="message error"><%= error %></div>
    <% } %>

    <%# You can also display other flash message types if needed %>
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="message error"><%= error_msg %></div>
    <% } %>
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="message success"><%= success_msg %></div>
    <% } %>


    <form action="/admin/login" method="POST">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn">Login</button>
    </form>
</div>

<%- include('../partials/footer') %>
