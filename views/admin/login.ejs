<%- include('../partials/header', { pageTitle: 'Admin Login' }) %>

<div class="admin-form">
    <h2>Admin Login</h2>

    <%# Display login error messages from passport/flash %>
    <% if (error && error.length > 0) { %>
        <div class="message error"><%= error %></div>
    <% } %>
    <% if (locals.error_msg && locals.error_msg.length > 0) { %> <%# Alternative flash message check %>
        <div class="message error"><%= locals.error_msg %></div>
    <% } %>


    <form action="/admin/login" method="POST">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn">Login</button>
    </form>
</div>

<%- include('../partials/footer') %>
